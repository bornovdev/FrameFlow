{
  "compilerOptions": {
    "noEmitOnError": true,
    "target": "ES6",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "outDir": "./build",
    "esModuleInterop": true,
    "types": [
      "node",
      "express"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}